{
  "name": "Deno",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "runArgs": [
    "--name",
    "shiny-colors-cd-info-api"
  ],
  "postAttachCommand": "deno --version",
  "features": {
    "ghcr.io/dhoeric/features/act:1": {}
  },
  // Configure tool-specific properties.
  "customizations": {
    // Configure properties specific to VS Code.
    "vscode": {
      // Set *default* container specific settings.json values on container create.
      "settings": {
        // Enables the project as a Deno project
        "deno.enable": true,
        // Enables Deno linting for the project
        "deno.lint": true,
        // Sets Deno as the default formatter for the project
        "editor.defaultFormatter": "denoland.vscode-deno"
      },
      // Add the IDs of extensions you want installed when the container is created.
      "extensions": [
        "denoland.vscode-deno",
        "aaron-bond.better-comments",
        "vivaxy.vscode-conventional-commits",
        "EditorConfig.EditorConfig",
        "usernamehw.errorlens",
        "mhutchie.git-graph",
        "donjayamanne.githistory",
        "eamodio.gitlens",
        "VisualStudioExptTeam.vscodeintellicode",
        "VisualStudioExptTeam.intellicode-api-usage-examples",
        "VisualStudioExptTeam.vscodeintellicode-completions",
        "ryu1kn.partial-diff",
        "hbenl.vscode-test-explorer",
        "wayou.vscode-todo-highlight",
        "Gruntfuggly.todo-tree",
        "redhat.vscode-yaml",
        "justjavac.vscode-deno-extensionpack",
        "tamasfe.even-better-toml",
        "RapidAPI.vscode-rapidapi-client",
        "github.vscode-github-actions",
        "rangav.vscode-thunder-client"
      ]
    }
  },
  "remoteUser": "vscode"
}
