{
  // JSONスキーマで入力補完できるようにする
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  //タイムゾーン
  "timezone": "Asia/Tokyo",
  // スケジュール設定（タイムゾーン未設定の場合はUTCで設定する）
  "schedule": [
    "after 0:00 and before 23:00"
  ],
  // 1時間で作成できるPRの上限（0で上限無し）
  "prHourlyLimit": 0,
  // 作成できるPR/ブランチの上限（0で上限無し）
  "prConcurrentLimit": 0,
  // Renovate のコミット上限（デフォルトは無制限）
  "prCommitsPerRunLimit": 0,
  // アサイン
  "assignees": [
    "hytsnbr"
  ],
  // レビュアー
  "reviewers": [
    "hytsnbr"
  ],
  // ベースブランチ名
  "branchPrefix": "dependency/",
  // Issue に Dependency Dashboard を作成するか
  "dependencyDashboard": true,
  // Dependency Dashboard の Issueタイトル
  "dependencyDashboardTitle": "Dependency Dashboard",
  // CVE のリストアップ条件
  "dependencyDashboardOSVVulnerabilitySummary": "unresolved",
  "dependencyDashboardLabels": [
    "dependencies",
    "renovate"
  ], // PRに付けるラベル
  "labels": [
    "dependencies",
    "renovate"
  ],
  "prBodyNotes": [],
  // 細かいルール
  "packageRules": [
    // github-actions 特有の設定
    {
      "matchManagers": [
        "github-actions"
      ],
      "addLabels": [
        "github-actions"
      ],
      "additionalBranchPrefix": "github-actions/"
    },
    // Deno
    // Ref: https://til.swfz.io/entries/deno_renovate/
    {
      "fileMatch": [
        "\\.tsx?$"
      ],
      "matchStrings": [
        "(?:im|ex)port(?:.|\\s)+?from\\s*['\"](?<depName>https://deno.land/.+?)@v?(?<currentValue>\\d+?\\.\\d+?\\.\\d+?).*?['\"]"
      ],
      "datasourceTemplate": "deno"
    },
    {
      "fileMatch": [
        "\\.tsx?$"
      ],
      "matchStrings": [
        "(?:im|ex)port(?:.|\\s)+?from\\s*['\"](?<depName>https://deno.land/x/.+?)@v?(?<currentValue>\\d+?\\.\\d+?\\.\\d+?).*?['\"]"
      ],
      "datasourceTemplate": "deno"
    },
    {
      "fileMatch": [
        "\\.tsx?$"
      ],
      "matchStrings": [
        "(?:im|ex)port(?:.|\\s)+?from\\s*['\"]https://esm.sh/(?<depName>.+?)@v?(?<currentValue>\\d+?\\.\\d+?\\.\\d+?).*?['\"]"
      ],
      "datasourceTemplate": "npm"
    }
  ]
}
